<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/start_dialog_shape"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="10dp"
    android:paddingRight="16dp"

    android:paddingBottom="10dp"
    android:visibility="visible">

    <TextView
        android:id="@+id/tviewChoseGameType"
        android:layout_width="265dp"
        android:layout_height="44dp"
        android:text="Choose game type:"
        android:textAlignment="center"
        android:textColor="#0B0A0A"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/rgAIvsPlayer"
        android:layout_width="311dp"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rbPlayer"
            android:layout_width="207dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:text="Player vs Player"
            android:textColor="#090909"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rbAI"
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:text="Player vs Computer"
            android:textColor="#070707"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btBack"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/buttons"
                android:text="Back"
                android:textColor="#151515"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btPlay"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/buttons"
                android:text="Play"
                android:textColor="#1C1B1B"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

    </RadioGroup>

</LinearLayout>